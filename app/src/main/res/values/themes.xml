<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Cheers.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorToolbar">?colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?colorToolbar</item>
        <item name="colorOnToolbar">?colorOnPrimary</item>

        <item name="drawerArrowStyle">@style/Theme.Cheers.ArrowStyle</item>
    </style>

    <style name="Theme.Cheers.Base.Light" parent="Theme.Cheers.Base">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Cheers.Default" parent="Theme.Cheers.Base.Light">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/light_colorPrimaryVariant</item>

        <item name="colorSecondary">@color/light_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/light_colorSecondaryVariant</item>
        <item name="colorSecondaryTransparent">@color/light_colorSecondaryTransparent</item>
    </style>

    <style name="Theme.Cheers.ArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?colorOnToolbar</item>
    </style>

    <style name="Theme.Cheers.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Cheers.Default</item>
        <item name="windowSplashScreenBackground">@color/light_colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
    </style>
</resources>